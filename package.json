{
  "name": "wag-api-server",
  "version": "1.0.0",
  "description": "WAG API Gateway - WhatsApp Notification Engine (Token-Gated via Blockchain)",
  "main": "server.js",
  "bin": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "app": "node app.js",
    "build": "pkg server.js --targets node18-win-x64 --output dist/WAG-Gateway.exe",
    "build-all": "npm run build && npm run create-release"
  },
  "keywords": [
    "whatsapp",
    "gateway",
    "api",
    "token",
    "blockchain",
    "polygon",
    "notification",
    "engine"
  ],
  "author": "Daniel Rizaldy",
  "license": "MIT",
  "pkg": {
    "assets": [
      "node_modules/puppeteer/**/*",
      "node_modules/whatsapp-web.js/**/*",
      ".env",
      "package.json"
    ],
    "targets": [
      "node18-win-x64"
    ],
    "outputPath": "dist",
    "compress": "Brotli"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "bip39": "^3.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethereumjs-wallet": "^1.0.2",
    "ethers": "^6.10.0",
    "express": "^4.22.1",
    "ffmpeg-static": "^5.3.0",
    "handlebars": "^4.7.8",
    "jsonschema": "^1.5.0",
    "pdf-lib": "^1.17.1",
    "pdfkit": "^0.17.2",
    "qrcode": "^1.5.4",
    "qrcode-terminal": "^0.12.0",
    "sharp": "^0.34.5",
    "sss-wasm": "^0.4.0",
    "tls": "^0.0.1",
    "web3-utils": "^4.3.3",
    "whatsapp-web.js": "^1.26.1",
    "xlsx": "^0.18.5",
    "zxcvbn": "^4.4.2"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  }
}
